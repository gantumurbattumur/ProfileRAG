# Application Configuration
APP_NAME=ProfileRAG
APP_VERSION=1.0.0
DEBUG=false

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
MODEL_NAME=gpt-3.5-turbo
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# CORS - comma-separated origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://127.0.0.1:5173

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Email Notifications (Resend)
RESEND_API_KEY=your_resend_api_key_here
NOTIFICATION_EMAIL=your_email@example.com

# Contact Form
CONTACT_LOG_FILE=contact_messages.log

# Security
MAX_QUERY_LENGTH=2000
MAX_MESSAGE_LENGTH=5000

# Performance
# Enable startup warm-up to pre-load models (reduces first request latency)
# WARNING: Requires ~512MB+ RAM - disable on free-tier deployments
ENABLE_STARTUP_WARMUP=false
